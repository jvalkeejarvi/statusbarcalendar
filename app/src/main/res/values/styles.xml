<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault" /> -->

    <style name="AppBaseTheme" parent="Theme.AppCompat" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" />
    
    <style name="TextTitle" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <!--<item name="android:singleLine">true</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="TextTitleSmall" parent="@style/TextTitle">
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextBullet" parent="@style/TextTitle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="TextBulletSmall" parent="@style/TextTitle">
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="TextSettingsTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="RowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
